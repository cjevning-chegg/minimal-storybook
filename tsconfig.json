{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "react", "jest"]
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
