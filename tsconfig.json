{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "react", "jest"],
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.stories.*"
  ]
}
